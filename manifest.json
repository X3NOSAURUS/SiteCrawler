{
  "manifest_version": 3,
  "name": "SiteCrawler",
  "version": "0.5.0",
  "description": "Crawl sites you visit and build a list of endpoints.",
  "permissions": [
    "webRequest",
    "webNavigation",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "service_worker.js" },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SiteCrawler",
    "default_icon": {
      "16": "icon/icon_16.png",
      "32": "icon/icon_32.png",
      "48": "icon/icon_48.png",
      "128": "icon/icon_128.png"
    }
  },
  "icons": {
    "16": "icon/icon_16.png",
    "32": "icon/icon_32.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png",
    "256": "icon/icon_256.png",
    "512": "icon/icon_512.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script_main.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content_script_relay.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
