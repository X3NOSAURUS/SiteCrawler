{
  "manifest_version": 3,
  "name": "SiteCrawler",
  "version": "0.5.1",
  "description": "Crawl sites you visit and build a list of endpoints.",
  "permissions": ["webRequest", "webNavigation", "storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SiteCrawler",
    "default_icon": {
      "16": "icon/icon_16.png",
      "32": "icon/icon_32.png",
      "48": "icon/icon_48.png",
      "128": "icon/icon_128.png"
    }
  },
  "icons": {
    "16": "icon/icon_16.png",
    "32": "icon/icon_32.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png",
    "256": "icon/icon_256.png",
    "512": "icon/icon_512.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script_forms.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "import.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
